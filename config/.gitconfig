[alias]
	# Help
	aliases = config --get-regexp alias

	# Commits
	amend = commit --amend --reuse-message=HEAD
	save = push -u origin HEAD
	undo = reset --hard
	last = log -1 HEAD

	# Branches
	new = checkout -b
	del = branch -D

	# Simple shortcuts
	co = checkout
	br = branch
	ci = commit
	st = status


[credentials]
	# Helps to store password
	helper = osxkeychain
	
[init]
	# on fresh project
        defaultBranch = master

[pull]
	# Default behaviour
	rebase = false
